generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Wallet {
  id        String   @id @default(cuid())
  address   String   @unique
  createdAt DateTime @default(now())

  approvals   Approval[]
  snapshots   Snapshot[]
  chainStates WalletChainState[]
}

model WalletChainState {
  id               String  @id @default(cuid())
  wallet           Wallet  @relation(fields: [walletId], references: [id])
  walletId         String
  chain            String
  lastScannedBlock BigInt  @default(0)

  @@unique([walletId, chain])
}

model Approval {
  id               String   @id @default(cuid())
  wallet           Wallet   @relation(fields: [walletId], references: [id])
  walletId         String
  chain            String
  tokenAddress     String
  spenderAddress   String
  allowance        Decimal  @db.Numeric(78, 0)
  isUnlimited      Boolean
  lastUpdatedBlock BigInt
  lastUpdatedAt    DateTime @default(now())

  @@unique([walletId, chain, tokenAddress, spenderAddress])
  @@index([walletId, chain])
  @@index([spenderAddress])
}

model Snapshot {
  id          String          @id @default(cuid())
  wallet      Wallet          @relation(fields: [walletId], references: [id])
  walletId    String
  chain       String
  createdAt   DateTime        @default(now())
  blockNumber BigInt

  items     SnapshotItem[]
  diffsFrom SnapshotDiff[] @relation("DiffFrom")
  diffsTo   SnapshotDiff[] @relation("DiffTo")
}

model SnapshotItem {
  id             String   @id @default(cuid())
  snapshot       Snapshot @relation(fields: [snapshotId], references: [id])
  snapshotId     String
  tokenAddress   String
  spenderAddress String
  allowance      Decimal  @db.Numeric(78, 0)
  isUnlimited    Boolean
}

model SnapshotDiff {
  id             String    @id @default(cuid())
  fromSnapshot   Snapshot  @relation("DiffFrom", fields: [fromSnapshotId], references: [id])
  fromSnapshotId String
  toSnapshot     Snapshot  @relation("DiffTo", fields: [toSnapshotId], references: [id])
  toSnapshotId   String

  diffPayload    Json      // JSONB in Postgres
  createdAt      DateTime  @default(now())

  @@unique([fromSnapshotId, toSnapshotId])
}

